@page "/registrarse"

@using ProyectoPADSimpson.Shared.Models;
@using ProyectoPADSimpson.Client.Servicios;

@inject HttpClient Http

@inject IUsuarioServicio _usuarioServicio
@inject NavigationManager _navServicio
@inject IToastService toastServicio

 <div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Cuenta</h3></div>
                <div class="card-body">


                    <EditForm Model="usuario" OnValidSubmit="OnValidSubmit">
                    <DataAnnotationsValidator></DataAnnotationsValidator>

                        <div class="form-floating mb-3">
                            <input class="form-control" id="inputEmail" placeholder="username" @bind-value="usuario.Username" autocomplete="off"/>
            
                            <label for="inputEmail">Nombre de Usuario</label>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" id="inputPassword" type="password" placeholder="Create a password" @bind-value="usuario.Password" autocomplete="off" />
                                    <label for="inputPassword">Contraseña</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                <input class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirm password" @bind-value="confirmarPassword" autocomplete="off" />
                                    <label for="inputPasswordConfirm">Confirmar Contraseña</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Registrarse</button></div>
                        </div>
                    </EditForm>


                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="/login">Tienes una cuenta? Ir a login</a></div>
                </div>
            </div>
        </div>
    </div>
</div >

@code {

    String confirmarPassword = "";

    [Parameter]
    public int idUsuarioEditar { get; set; } = 0;


    string titulo = "Guardar Usuario";
    string btnTexto = "Nuevo Usuario";

    UsuarioDTO usuario = new UsuarioDTO();

    private async Task OnValidSubmit()
    {
        int idDevuelto = 0;
        
        if (usuario.Password != confirmarPassword)
        {
            toastServicio.ShowWarning("Las contraseñas no coinciden.");
            return;
        }

        idDevuelto = await _usuarioServicio.Guardar(usuario);
     
        if (idDevuelto != 0)
        {
            toastServicio.ShowSuccess("Su cuenta ha sido creada");
            _navServicio.NavigateTo("/login");
        }
        else
        {
            toastServicio.ShowError("No se pudo crear su cuenta, intente más tarde");
        }

        // if (idDevuelto != 0)
        //     _navServicio.NavigateTo("/Usuarios");

    }
}